---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="pedro machado: portfolio">
  <p class="main col-span-3 mb-12 main-col">
    Artist and designer based in Argentina <br />
    <br /> pedromachadofulcheri@gmail.com <br />
    (+54) 2262 65 0401 <br />
    @pdromchado_
  </p>

  <img
    src="/face_photo.png"
    alt="a picture of pedro machado"
    class="sm:col-span-2 lg:col-span-1 col-span-3 col-start-2"
  />

  <section id="works" class="layout mt-12">
    <h1 id="works" class="font-title col-span-full pb-2 mb-2">works</h1>

    <div class="layout text-xs text-muted mb-2">
      <h2 class="col-span-1 text-xs mb-2 order-last">Client</h2>
      <h2 class="col-span-2 text-xs mb-2">Title</h2>
      <h2 class="col-span-1 text-xs mb-2 order-first">Location</h2>
      <h2 class="col-span-1 invisible md:visible">Time</h2>
    </div>

    <div
      class="col-span-full"
      x-data="{
                            portfolio: [
                {
                    title: 'Senior Software Engineer',
                    company: 'Tech Innovations Inc.',
                    city: 'San Francisco',
                    year: '2020-Present',
                    description: 'Led development of cloud-based enterprise solutions and mentored junior developers.'
                },
                {
                    title: 'Full Stack Developer',
                    company: 'Digital Solutions Ltd.',
                    city: 'New York',
                    year: '2018-2020',
                    description: 'Developed and maintained full-stack web applications using React and Node.js.'
                },
                {
                    title: 'Frontend Developer',
                    company: 'Creative Web Studios',
                    city: 'London',
                    year: '2016-2018',
                    description: 'Created responsive web interfaces and improved user experience across multiple projects.'
                },
                {
                    title: 'UI/UX Designer',
                    company: 'Design Hub',
                    city: 'Berlin',
                    year: '2014-2016',
                    description: 'Designed user interfaces and conducted user research for various client projects.'
                }
                            ]
                        }"
    >
      <template
        x-data="{visible: 0}"
        x-for="(job, index) in portfolio"
        :key="job.title"
      >
        <div
          @click="visible = visible == index ? null : index"
          class="layout text-sm"
        >
          <div class="layout pt-2">
            <div
              class="col-span-2 md:col-span-1 order-last"
              x-text="job.company"
            >
            </div>

            <div class="col-span-2 font-bold" x-text="job.title"></div>

            <div class="col-span-1 order-first text-xs md:text-base" x-text="job.city"></div>

            <div class="col-span-1 invisible md:visible" x-text="job.year">
            </div>
          </div>

          <div
            class="col-span-2 col-start-2 text-muted "
            x-show="visible === index"
            x-collapse
            x-text="job.description"
          >
          </div>
        </div>
      </template>
    </div>
  </section>
</MainLayout>
